extends ./layout

block content
  div(ng-controller="comment")
    h2 edit
    div id
      input(ng-model="editId")
    div name
      input(ng-model="editName")
    div content
      input(ng-model="editContent")
    div article
      input(ng-model="editArticle")
      button(ng-click="edit()") edit
    h2 del
    div id
      input(ng-model="delId")
      button(ng-click="del()") del
    h2 fetchby
    div article
      input(ng-model="fetchbyArticle")
      button(ng-click="fetchby()") fetchby
    h2 fetchall
    div
      button(ng-click="fetchall()") fetchall
