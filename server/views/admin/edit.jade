extends layout
block globalVars
  - var siteTitle = '写文章'
block content
  form(ng-controller="edit" name="edit" class="lpadmin-edit")
    div.lpformgroup
      label(for="title") #{static.title}
      input(id="title" placeholder="#{static.newTitle}" ng-model="title" required)
    div.lpformgroup
      editblock(ng-model="content" required)
    div.lpformgroup.lpflex
      div.lpadmin-category
        items-editblock(ng-model="category" title="#{static.category}" method="categoryMethod" required)
      div.lpadmin-tag
        items-editblock(ng-model="tag" title="#{static.tag}" method="tagMethod" muti)
    div.lpformgroup
      <div class="lperrmsg" ng-if="errMsg" ng-bind="errMsg"></div>
      button(ng-click="submit()") #{static.submit}
